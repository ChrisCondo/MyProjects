<Window x:Class="AzureManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="112*"/>
            <ColumnDefinition Width="125*" />
        </Grid.ColumnDefinitions>
        
        <Button x:Name="_createButton" Content="Create" HorizontalAlignment="Left"
                VerticalAlignment="Top" Width="75" Margin="73,80,0,0"
                Grid.Column="1" Click="_createButtonClick" />
        <Button x:Name="_deployButton" Content="deploy" HorizontalAlignment="Left"
                VerticalAlignment="Top" Width="75" Margin="73,150,0,0"
                Grid.Column="1" Click="_deployButtonClick" />
    </Grid>
</Window>
